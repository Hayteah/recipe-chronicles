 
    <h1>Recipe List</h1>
    <ul>
        {{#each recipes}}
     <div class="recipe-card">
    <div class="recipe-details">
        <p>{{this.name}}</p>
        <img src="{{this.imageUrl}}" alt="food photos" class="recipe-image">
    </div>
    <div class="recipe-actions">
        <a class="btn btn-primary btn-dark btn-lg px-4 me-md-2" href="/recipe/edit/{{this._id}}">Edit</a>
        <a class="btn btn-primary btn-dark btn-lg px-4 me-md-2" href="/recipe/delete/{{this._id}}">Delete</a>
        
    </div>
</div>


        {{/each}}
    </ul>
